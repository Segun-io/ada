{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ada",
  "identifier": "com.ada.agent",
  "version": "0.0.1-alpha",
  "build": {
    "beforeDevCommand": "./scripts/dev-setup.sh && bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "./scripts/build-sidecars.sh && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ada - AI Code Agent Manager",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "externalBin": [
      "binaries/ada-cli",
      "binaries/ada-daemon"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "category": "DeveloperTool",
    "shortDescription": "AI Code Agent Manager",
    "longDescription": "Ada is an AI Code Agent Manager - a desktop application for managing multiple AI coding agents with integrated terminal support and git worktree workflows."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
